@model GuestResponse

@{
    ViewData["Title"] = "Register complete";
}

<div class="card" style="width: 18rem;">
    <div class="card-header">
        <h5 class="card-title text-success">Register complete</h5>
        <h6 class="card-subtitle mb-2 text-muted text-success">Thank you for registering</h6>
    </div>
    <div class="card-body">
        <div class="mb-3">
            <label asp-for="Name"></label>
            <div class="lead">@Model.Name</div>
        </div>
        <div class="mb-3">
            <label asp-for="Email"></label>
            <div class="lead">@Model.Email</div>
        </div>
        <div class="mb-3">
            <label asp-for="Phone"></label>
            <div class="lead">@Model.Phone</div>
        </div>
        <div class="mb-3">
            <label asp-for="WillAttend">Will Attend</label>
            <div class="lead">@(Model.WillAttend ? "Yes" : "No")</div>
        </div>
    </div>
    <div class="card-footer">
        <a asp-action="Index" class="card-link">Ok</a>
    </div>
</div>

