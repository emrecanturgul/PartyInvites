@model IEnumerable<GuestResponse>

@{
ViewData["Title"] = "List of responses";
}

<h1>@ViewData["Title"]</h1>

@if (Model.Count() == 0) {
    <p>Nobody registered yet. Be the first one to register.</p>
    <a asp-action="Register" class="btn btn-primary">Click here to register.</a>
}
else {
    
    <table>
        <thead>
        <tr>
            <th>Name</th>
            <th>Phone</th>
            <th>Email</th>
            <th>WillAttend</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var r in Model)
        {
            <tr>
                <td>@r.Name</td>
                <td>@r.Phone</td>
                <td>@r.Email</td>
                <td>@r.IsAttending</td>
            </tr>
        }
        </tbody>
    </table>
}